{
  "name": "fionakhor-blog",
  "version": "1.0.0",
  "description": "Fiona Khor's blog ",
  "main": "index.js",
  "engines": {
    "ghost": ">=3.0.0",
    "ghost-api": "v3"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-tailwind": "postcss tailwind/tailwind.css -o assets/css/tailwind.css",
    "build-posts": "postcss tailwind/posts.css -o assets/css/posts.css"
  },
  "keywords": [
    "ghost",
    "theme",
    "ghost-theme"
  ],
  "author": {
    "email": "jon@jonathanpark.ca"
  },
  "license": "ISC",
  "dependencies": {
    "autoprefixer": "^9.8.4",
    "postcss-cli": "^7.1.1",
    "tailwindcss": "^1.4.6"
  },
  "config": {
    "posts_per_page": 3,
    "image_sizes": {
        "xxs": {
            "width": 30
        },
        "xs": {
            "width": 100
        },
        "s": {
            "width": 300
        },
        "m": {
            "width": 600
        },
        "l": {
            "width": 1000
        },
        "xl": {
            "width": 2000
        }
    }
  },
  "devDependencies": {
    "postcss-color-mod-function": "^3.0.3"
  }
}
